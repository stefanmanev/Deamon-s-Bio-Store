<div id="arr">
    <ul id="arr-navigation">
        <li id="arr-by-price"><a href="#" class="btn">Arrange products by price</a></li>
        <li id="arr-by-price-descending"><a href="#" class="btn">Arrange products by price (descending)</a></li>
        <li id="arr-by-name"><a href="#" class="btn">Arrange products by name</a></li>
        <li id="arr-by-price-descending"><a href="#" class="btn">Arrange products by name (descending)</a></li>
    </ul>
</div>
<div id="main-container">
    {{#each this}}
    <div class="gallery col-sm-4 col-md-3">
        <a href="#/{{type}}/:{{id}}">
            <img class="main-image img-responsive" src="{{image}}" />
            <div class="img-title">
                <h3 class='product-name'>{{name}}</h3>
                <p class="price">$ {{price}}</p>
            </div>
        </a>
    </div>
    {{/each}}
</div>